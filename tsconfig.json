    "compilerOptions": {
        "esModuleInterop": true,
        "moduleResolution": "node",
        "target": "ES6",
        "lib": ["ES5", "ES6", "DOM"],
        "removeComments": true,
        "strictNullChecks": true
    },
    "include": ["src/**/*.ts", "spec/**/*.ts"],
    "exclude": ["node_modules"]
}