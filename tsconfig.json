{
    "compilerOptions": {
        "target": "ES5",
        "lib": ["ES5", "ES6", "DOM"],
        "sourceMap": true,
        "rootDir": "src",
        "downlevelIteration": true,
        "removeComments": true,
        "strictNullChecks": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}